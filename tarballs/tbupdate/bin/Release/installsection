	if test -d "$(DESTDIR)$(prefix)/share"; then echo nothing to do ; else mkdir "$(DESTDIR)$(prefix)/share"; fi
	if test -d "$(DESTDIR)$(prefix)/share/applications"; then echo nothing to do ; else mkdir "$(DESTDIR)$(prefix)/share/applications"; fi
	if test -d "$(DESTDIR)$(prefix)/share/pixmaps"; then echo nothing to do ; else mkdir "$(DESTDIR)$(prefix)/share/pixmaps"; fi
	cp -f "$(top_srcdir)/themonospot-gui/resources/themonospot.desktop" "$(DESTDIR)$(prefix)/share/applications/themonospot.desktop"
	cp -f "$(top_srcdir)/themonospot-gui/resources/monoSPOT_48.png" "$(DESTDIR)$(prefix)/share/pixmaps/themonospot.png"

	# Create folder of languages
	if test -d "$(DESTDIR)$(prefix)/share"; then echo nothing to do ; else mkdir "$(DESTDIR)$(prefix)/share"; fi
	if test -d "$(DESTDIR)$(prefix)/share/themonospot"; then echo nothing to do ; else mkdir "$(DESTDIR)$(prefix)/share/themonospot"; fi
	if test -d "$(DESTDIR)$(programfilesdir)/plugins"; then echo nothing to do ; else mkdir "$(DESTDIR)$(programfilesdir)/plugins"; fi
	cp -f -R "$(top_srcdir)/themonospot-base/languages" "$(DESTDIR)$(prefix)/share/themonospot"
